-- üì¶ GUI Movible con Guardar / Ir a Posici√≥n (funciona 100%)
-- ‚úÖ Usa RemoteEvent autom√°ticamente (no te devuelve)

local Players = game:GetService("Players")
local ReplicatedStorage = game:GetService("ReplicatedStorage")
local TweenService = game:GetService("TweenService")

local player = Players.LocalPlayer

-- Crear o encontrar RemoteEvent autom√°ticamente
local eventName = "TeleportEvent_" .. player.UserId
local remote = ReplicatedStorage:FindFirstChild(eventName)
if not remote then
    remote = Instance.new("RemoteEvent")
    remote.Name = eventName
    remote.Parent = ReplicatedStorage
end

-- Si estamos en el servidor, manejar teleports
if not game:GetService("RunService"):IsClient() then
    remote.OnServerEvent:Connect(function(p, action, pos)
        if action == "goto" and pos then
            local char = p.Character
            if char and char:FindFirstChild("HumanoidRootPart") then
                local root = char.HumanoidRootPart
                char:SetPrimaryPartCFrame(CFrame.new(pos + Vector3.new(0, 3, 0)))
            end
        end
    end)
    return
end

-- Crear GUI
local gui = Instance.new("ScreenGui")
gui.Name = "TeleportGUI"
gui.Parent = player:WaitForChild("PlayerGui")
gui.ResetOnSpawn = false

local frame = Instance.new("Frame")
frame.Size = UDim2.new(0, 220, 0, 110)
frame.Position = UDim2.new(0.5, -110, 0.5, -55)
frame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
frame.BorderSizePixel = 0
frame.Active = true
frame.Draggable = true
frame.Parent = gui

local title = Instance.new("TextLabel")
title.Size = UDim2.new(1, 0, 0, 25)
title.BackgroundColor3 = Color3.fromRGB(20, 20, 20)
title.Text = "üìç Guardar / Ir"
title.TextColor3 = Color3.new(1, 1, 1)
title.Font = Enum.Font.GothamBold
title.TextSize = 14
title.Parent = frame

local saveBtn = Instance.new("TextButton")
saveBtn.Size = UDim2.new(1, -20, 0, 30)
saveBtn.Position = UDim2.new(0, 10, 0, 35)
saveBtn.BackgroundColor3 = Color3.fromRGB(60, 180, 75)
saveBtn.TextColor3 = Color3.new(1, 1, 1)
saveBtn.Font = Enum.Font.GothamBold
saveBtn.TextSize = 14
saveBtn.Text = "üíæ Guardar Posici√≥n"
saveBtn.Parent = frame

local goBtn = Instance.new("TextButton")
goBtn.Size = UDim2.new(1, -20, 0, 30)
goBtn.Position = UDim2.new(0, 10, 0, 70)
goBtn.BackgroundColor3 = Color3.fromRGB(0, 120, 255)
goBtn.TextColor3 = Color3.new(1, 1, 1)
goBtn.Font = Enum.Font.GothamBold
goBtn.TextSize = 14
goBtn.Text = "üöÄ Ir a Posici√≥n"
goBtn.Parent = frame

local savedPos = nil

-- Guardar posici√≥n
saveBtn.MouseButton1Click:Connect(function()
	local char = player.Character or player.CharacterAdded:Wait()
	local root = char:WaitForChild("HumanoidRootPart")
	savedPos = root.Position
	saveBtn.Text = "‚úÖ Posici√≥n guardada!"
	task.wait(1.5)
	saveBtn.Text = "üíæ Guardar Posici√≥n"
end)

-- Ir a posici√≥n (ahora no te devuelve)
goBtn.MouseButton1Click:Connect(function()
	if not savedPos then
		goBtn.Text = "‚ùå No guardaste posici√≥n"
		task.wait(1.5)
		goBtn.Text = "üöÄ Ir a Posici√≥n"
		return
	end

	-- peque√±a animaci√≥n de efecto (cliente)
	local char = player.Character
	local root = char:WaitForChild("HumanoidRootPart")
	local tweenInfo = TweenInfo.new(0.3, Enum.EasingStyle.Sine, Enum.EasingDirection.Out)
	local tween = TweenService:Create(root, tweenInfo, {CFrame = CFrame.new(savedPos + Vector3.new(0, 3, 0))})
	tween:Play()

	-- decirle al servidor que te mueva oficialmente
	remote:FireServer("goto", savedPos)
end)
