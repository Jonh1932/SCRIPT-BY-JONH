-- üì¶ GUI Movible con transici√≥n suave al teletransportar
local player = game.Players.LocalPlayer
local tweenService = game:GetService("TweenService")

-- Esperar al personaje
local function getCharacter()
	local char = player.Character or player.CharacterAdded:Wait()
	local root = char:WaitForChild("HumanoidRootPart")
	return char, root
end

-- Crear GUI
local gui = Instance.new("ScreenGui")
gui.Name = "TeleportGUI"
gui.Parent = player:WaitForChild("PlayerGui")
gui.ResetOnSpawn = false

local frame = Instance.new("Frame")
frame.Size = UDim2.new(0, 220, 0, 110)
frame.Position = UDim2.new(0.5, -110, 0.5, -55)
frame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
frame.BorderSizePixel = 0
frame.Active = true
frame.Draggable = true
frame.Parent = gui

local title = Instance.new("TextLabel")
title.Size = UDim2.new(1, 0, 0, 25)
title.BackgroundColor3 = Color3.fromRGB(20, 20, 20)
title.Text = "üìç Guardar / Ir"
title.TextColor3 = Color3.new(1, 1, 1)
title.Font = Enum.Font.GothamBold
title.TextSize = 14
title.Parent = frame

-- Bot√≥n guardar
local saveBtn = Instance.new("TextButton")
saveBtn.Size = UDim2.new(1, -20, 0, 30)
saveBtn.Position = UDim2.new(0, 10, 0, 35)
saveBtn.BackgroundColor3 = Color3.fromRGB(60, 180, 75)
saveBtn.TextColor3 = Color3.new(1, 1, 1)
saveBtn.Font = Enum.Font.GothamBold
saveBtn.TextSize = 14
saveBtn.Text = "üíæ Guardar Posici√≥n"
saveBtn.Parent = frame

-- Bot√≥n ir
local goBtn = Instance.new("TextButton")
goBtn.Size = UDim2.new(1, -20, 0, 30)
goBtn.Position = UDim2.new(0, 10, 0, 70)
goBtn.BackgroundColor3 = Color3.fromRGB(0, 120, 255)
goBtn.TextColor3 = Color3.new(1, 1, 1)
goBtn.Font = Enum.Font.GothamBold
goBtn.TextSize = 14
goBtn.Text = "üöÄ Ir a Posici√≥n"
goBtn.Parent = frame

-- Variable de posici√≥n guardada
local savedPosition = nil

-- Guardar posici√≥n
saveBtn.MouseButton1Click:Connect(function()
	local _, root = getCharacter()
	savedPosition = root.Position
	saveBtn.Text = "‚úÖ Posici√≥n guardada!"
	task.wait(1.5)
	saveBtn.Text = "üíæ Guardar Posici√≥n"
end)

-- Ir a la posici√≥n (suavemente)
goBtn.MouseButton1Click:Connect(function()
	if not savedPosition then
		goBtn.Text = "‚ùå No guardaste posici√≥n"
		task.wait(1.5)
		goBtn.Text = "üöÄ Ir a Posici√≥n"
		return
	end

	local char, root = getCharacter()
	local humanoid = char:FindFirstChildOfClass("Humanoid")
	if humanoid then
		humanoid:ChangeState(Enum.HumanoidStateType.Physics)
	end

	-- Tween suave (0.8 segs)
	local tweenInfo = TweenInfo.new(0.8, Enum.EasingStyle.Sine, Enum.EasingDirection.Out)
	local goal = { CFrame = CFrame.new(savedPosition + Vector3.new(0, 3, 0)) }
	local tween = tweenService:Create(root, tweenInfo, goal)
	tween:Play()
	tween.Completed:Wait()

	if humanoid then
		humanoid:ChangeState(Enum.HumanoidStateType.RunningNoPhysics)
	end
end)
