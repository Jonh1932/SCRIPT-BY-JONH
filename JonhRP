--// JONHSCRIPTS BROOKHAVEN FINAL GUI SCRIPT
--// Hecho por ChatGPT (GPT-5) üíú

local player = game.Players.LocalPlayer
local character = player.Character or player.CharacterAdded:Wait()
local humanoid = character:WaitForChild("Humanoid")
local replicatedStorage = game:GetService("ReplicatedStorage")

--// Referencias a los botones en tu GUI
local gui = script.Parent
local frame = gui:WaitForChild("Frame")

local JumpButton = frame:WaitForChild("JumpButton")
local VelocityButton = frame:WaitForChild("VelocityButton")
local VelocityMinus = frame:WaitForChild("-VelocityButton")
local VelocityPlus = frame:WaitForChild("+VelocityButton")
local NoclipButton = frame:WaitForChild("NoclipButton")
local InvisibleButton = frame:WaitForChild("InvisibleButton")
local ESPButton = frame:WaitForChild("ESPButton")
local SpawnButton = frame:WaitForChild("SpawnButton")
local MedidorLabel = frame:WaitForChild("MedidorLabel")

--// Variables de control
local noclipActive = false
local infJump = false
local walkSpeed = 16
local espEnabled = false
local invisibleEnabled = false

---------------------------------------------------------
--// üîπ INFINITE JUMP
---------------------------------------------------------
JumpButton.MouseButton1Click:Connect(function()
	infJump = not infJump
	JumpButton.Text = infJump and "INF JUMP ‚úÖ" or "INF JUMP ‚ùå"

	if infJump then
		local UserInputService = game:GetService("UserInputService")
		UserInputService.JumpRequest:Connect(function()
			if infJump and humanoid then
				humanoid:ChangeState("Jumping")
			end
		end)
	end
end)

---------------------------------------------------------
--// üîπ VELOCIDAD (CONTROLABLE CON + Y -)
---------------------------------------------------------
VelocityButton.MouseButton1Click:Connect(function()
	if humanoid then
		humanoid.WalkSpeed = walkSpeed
	end
end)

VelocityPlus.MouseButton1Click:Connect(function()
	walkSpeed += 5
	humanoid.WalkSpeed = walkSpeed
	MedidorLabel.Text = tostring(walkSpeed)
end)

VelocityMinus.MouseButton1Click:Connect(function()
	walkSpeed = math.max(0, walkSpeed - 5)
	humanoid.WalkSpeed = walkSpeed
	MedidorLabel.Text = tostring(walkSpeed)
end)

---------------------------------------------------------
--// üîπ NOCLIP
---------------------------------------------------------
local noclipConnection
NoclipButton.MouseButton1Click:Connect(function()
	noclipActive = not noclipActive
	NoclipButton.Text = noclipActive and "NOCLIP ‚úÖ" or "NOCLIP ‚ùå"

	if noclipActive then
		noclipConnection = game:GetService("RunService").Stepped:Connect(function()
			for _, part in pairs(character:GetDescendants()) do
				if part:IsA("BasePart") then
					part.CanCollide = false
				end
			end
		end)
	else
		if noclipConnection then noclipConnection:Disconnect() end
		for _, part in pairs(character:GetDescendants()) do
			if part:IsA("BasePart") then
				part.CanCollide = true
			end
		end
	end
end)

---------------------------------------------------------
--// üîπ INVISIBLE
---------------------------------------------------------
InvisibleButton.MouseButton1Click:Connect(function()
	invisibleEnabled = not invisibleEnabled
	InvisibleButton.Text = invisibleEnabled and "INVISIBLE ‚úÖ" or "INVISIBLE ‚ùå"

	for _, part in pairs(character:GetChildren()) do
		if part:IsA("BasePart") then
			part.Transparency = invisibleEnabled and 1 or 0
		elseif part:IsA("Decal") then
			part.Transparency = invisibleEnabled and 1 or 0
		end
	end
end)

---------------------------------------------------------
--// üîπ ESP (Bordes en todos los jugadores)
---------------------------------------------------------
local function createESP(target)
	local highlight = Instance.new("Highlight")
	highlight.FillTransparency = 1
	highlight.OutlineColor = Color3.fromRGB(255, 0, 0)
	highlight.Parent = target
end

local function removeESP(target)
	for _, v in pairs(target:GetChildren()) do
		if v:IsA("Highlight") then
			v:Destroy()
		end
	end
end

ESPButton.MouseButton1Click:Connect(function()
	espEnabled = not espEnabled
	ESPButton.Text = espEnabled and "ESP ‚úÖ" or "ESP ‚ùå"

	for _, plr in pairs(game.Players:GetPlayers()) do
		if plr ~= player and plr.Character then
			if espEnabled then
				createESP(plr.Character)
			else
				removeESP(plr.Character)
			end
		end
	end

	game.Players.PlayerAdded:Connect(function(plr)
		plr.CharacterAdded:Connect(function(char)
			if espEnabled then
				createESP(char)
			end
		end)
	end)
end)

---------------------------------------------------------
--// üîπ SPAWN LIMO (FUNCI√ìN ESPECIAL)
---------------------------------------------------------
SpawnButton.MouseButton1Click:Connect(function()
	pcall(function()
		replicatedStorage.RE["1Ca1r"]:FireServer("PickingCar", "Limo")
	end)
	SpawnButton.Text = "Spawn Limo ‚úÖ"
	task.wait(2)
	SpawnButton.Text = "Spawn Limo"
end)

---------------------------------------------------------
--// Animaci√≥n suave al abrir GUI (bonito detalle ‚ú®)
---------------------------------------------------------
frame.BackgroundTransparency = 1
for i = 1, 20 do
	frame.BackgroundTransparency = 1 - (i * 0.04)
	task.wait(0.02)
end
